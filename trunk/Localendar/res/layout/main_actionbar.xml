<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >
    
    <TextView   
    	android:layout_height="wrap_content"   
        android:layout_width="wrap_content"  
        android:gravity="center_vertical" 
        android:id="@+id/calendar_title"
        android:textColor="@color/mid_blue"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:textSize="25sp" />
                
	<ImageView
        android:id="@+id/place_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/search_map"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="#000000" />
	
    <com.comp3111.localendar.support.ClearableAutoCompleteTextView
        android:id="@+id/search_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="20"
        android:hint="Search Map"
        android:icon="@drawable/search_map"
        android:showAsAction="ifRoom"
        android:textSize="20sp"
        android:imeOptions="actionSearch"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:textColor="#000000" >
    </com.comp3111.localendar.support.ClearableAutoCompleteTextView>
    
     

</RelativeLayout>